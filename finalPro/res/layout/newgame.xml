<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    
<RelativeLayout
    android:layout_width="fill_parent"
  android:layout_height="fill_parent" android:gravity="center" android:background="@drawable/dark_green_ball">

<Button android:id="@+id/Button01" android:layout_alignParentLeft="true" android:text="New Game" android:layout_height="50dip" android:layout_width="wrap_content" android:textSize="30dip" android:typeface="sans" android:layout_marginBottom="20dip" android:textColor="#FFFFFF" android:background="#008000"></Button>
<Button android:layout_width="wrap_content" android:id="@+id/Button03" android:layout_below="@+id/Button01" android:layout_alignLeft="@+id/Button01" android:layout_alignRight="@+id/Button01" android:text="High Score" android:textSize="30dip" android:typeface="sans" android:layout_marginBottom="20dip" android:layout_height="50dip" android:textColor="#FFFFFF" android:background="#8B4513" android:visibility="gone"></Button>
<Button android:layout_width="wrap_content" android:id="@+id/Button04" android:layout_below="@+id/Button03" android:layout_alignLeft="@+id/Button03" android:layout_alignRight="@+id/Button03" android:textSize="30dip" android:typeface="sans" android:layout_marginBottom="20dip" android:layout_height="50dip" android:textColor="#FFFFFF" android:text="Options" android:background="#008000"></Button>





<Button android:id="@+id/Button02" android:layout_below="@+id/Button04" android:layout_width="wrap_content" android:layout_alignLeft="@+id/Button04" android:layout_alignRight="@+id/Button04" android:textColor="#FFFFFF" android:layout_marginBottom="20dip" android:layout_height="50dip" android:textSize="30dip" android:typeface="sans" android:text="Help" android:background="#008000"></Button>




</RelativeLayout>



</LinearLayout>
